{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "javac",
        "args": [
          "-d",
          "dist",
          "*.java"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "label": "run",
        "type": "shell",
        "command": "java",
        "args": [
          "-cp",
          "dist",
          "Main"
        ],
        "group": {
          "kind": "test",
          "isDefault": true
        }
      }
    ]
  }
  